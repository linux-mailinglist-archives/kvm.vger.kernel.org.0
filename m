> > > +		if (trigger == tmp->eventfd) {
> > > +			ret = 0;
> > > +			break;
> > > +		}
> > > +	}
> > > +	spin_unlock_irq(&kvm->irqfds.lock);
> > > +	if (ret)
> > > +		return ret;
> > > +	irq_entry = tmp->irq_entry;
> > > +	return kvm_verify_msi(kvm, &irq_entry);  
